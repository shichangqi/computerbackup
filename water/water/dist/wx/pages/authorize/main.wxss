
.authorize {
  width: 100vw;
  height: 100vh;
  background: #fff;
  clear: both;
  overflow: hidden;
}
.authorize ._img {
  display: block;
  width: 336rpx;
  height: 114rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  margin-bottom: 160rpx;
}
.authorize ._p {
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #888;
  margin-bottom: 20rpx;
}
.authorize ._button {
  width: 320rpx;
  height: 88rpx;
  background: linear-gradient(143deg, #fc7484 0%, #ff4c4c 100%);
  box-shadow: 0 8rpx 16rpx 0 rgba(255, 76, 76, 0.3);
  border-radius: 44rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #ffffff;
  margin: 200rpx auto;
}